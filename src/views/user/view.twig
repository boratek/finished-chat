{% extends 'layout.twig' %}

{% block title %}Chat - Admin - View{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('/logout') }}">Logout</a>
    {% else %}
        <a href="{{ path('/login') }}">Login</a>
    {% endif %}

    <h1>User </h1>
    <p>
        {% if user|length > 0 %}
            {% for row in user %}
                {{ row.id|e}},
                {{ row.name|upper }},
                {{ row.email|e }},
            {% endfor %}
        {% else %}
            Invalid data.
        {% endif %}
    </p>
    <a href="{{url('/profile')}}">Return</a>
{% endblock %}
