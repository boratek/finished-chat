{% extends 'layout.twig' %}

{% block title %}Chat - {{ 'User'|trans }} - {{ 'Profile'|trans }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}


    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('/logout') }}">{{ 'Logout'|trans }}</a>

    {% else %}
        <a href="{{ path('/login') }}">{{ 'Login'|trans }}</a>

    {% endif %}



    {% for flashbag in app.session.getFlashBag.get('success') %}
        <div class="alert alert-success">
            {{ flashbag.title }}
            {{ flashbag.content }}
        </div>
    {% endfor %}



    {% if user|length > 0 %}
        {% for row in user %}
            <h1>{{row.login}}</h1>
            <a href="{{row.login}}/chat">{{ 'Chat'|trans }}</a>
            <a href="{{row.login}}/logout">{{ 'Logout'|trans }}</a>
            <a href="{{row.login}}/change_data">{{ 'Change data'|trans }}</a>
        {% endfor %}
    {% else %}
        {{ 'Invalid data'|trans }}
    {% endif %}


    <h2>{{ 'Your data'|trans }}</h2>
    <p>
        {% if user|length > 0 %}
            {% for row in user %}
                {{row.id}},
                {{row.name|upper}},
                {{row.login|e}},
                {{row.email|e}},
            {% endfor %}
        {% else %}
            {{ 'Invalid data'|trans }}
        {% endif %}
    </p>

{% endblock %}
