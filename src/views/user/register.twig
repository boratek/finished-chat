{% extends 'layout.twig' %}

{% block title %}Chat - {{ 'User'|trans }} - {{ 'Signin'|trans }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

    {% for flashbag in app.session.getFlashBag.get('message') %}
        <div class="alert alert-{{ flashbag.type }}">
            {{ flashbag.title }}
            {{ flashbag.content|trans }}
        </div>
    {% endfor %}

    <p class="return"><a href="../../../../~11_krawczyk/chat/web/index">{{ 'Return'|trans }}</a></p>

    <h2>{{ 'Register'|trans }}</h2>

    <form action="" method="post" novalidate {{ form_enctype(form) }} class="form-inline well span3" id="register_form">
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">{{ 'Register'|trans }}</button>
    </form>

{% endblock %}
